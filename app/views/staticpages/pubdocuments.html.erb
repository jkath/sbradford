<h1>Helpful Documents</h1>
<br>
<div id="pagecontent">
<div class="top-left"></div><div class="top-right"></div>
	<div class="inside">
		<p class="notopgap">&nbsp;</p>
		<!-- Start Of Content -->
  	<!-- Your content goes here -->
	<% if @documents.size == 0%>
		There Are No Documents Available Yet
		<br>
	<% else %>
		<table width="100%">
		  <tr>
		    <th>Title</th>
		    <th>Description</th>
		  </tr>

		<% x = 2 %>
		<% @documents.each do |document| %>
		<% newsclass = "row1bg"
		   newsclass = "row2bg" if x % 2 == 0
		   x += 1
		%>
		 <tr class="<%= newsclass %>">
		    <td class="listtablestd"><%=h truncate_words(document.title, 5) %></td>
		    <td class="listtablestd"><%= truncate_words(document.description, 5) %></td>
		    <td align="center">
				<a href="/system/documents/<%= document.id.to_s %>/<%= document.document_file_name %>"/>
					View Document
				  </a>			
			</td>
		  </tr>
		<% end %>
		</table>
	<% end %>
		<br />
		<br />
		
	<!-- End Of Content -->
	<br>
	<p class="nobottomgap"></p>
</div>
<div class="bottom-left"></div><div class="bottom-right"></div>
</div> <!-- End Page Content -->