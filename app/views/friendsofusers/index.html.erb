<h1>Friends Of Users</h1>

<div id="pagecontent">
<div class="top-left"></div><div class="top-right"></div>
	<div class="inside">
		<p class="notopgap">&nbsp;</p>
			<!-- Start Of Content -->
		<table width="100%">
		  <tr>
		    <th align="left">First Name</th>
		    <th align="left">Last Name</th>
		    <th align="left">Email</th>
		    <th align="left">Friends Name</th>
		  </tr>
		<% if @friendsofusers.size == 0 %>
		<tr><td colspan="4">No Friends Saved Yet</td></tr>
		<% end %>

		<% @friendsofusers.each do |friendsofuser| %>
		  <% user = User.find(friendsofuser.user_id) %>
		  <tr>
		    <td><%=h friendsofuser.firstname %></td>
		    <td><%=h friendsofuser.lastname %></td>
		    <td><%=h friendsofuser.email %></td>
		    <td><%=h user.firstname + " " + user.lastname %></td>
		    <td><%= link_to 'Destroy', friendsofuser, :confirm => 'Are you sure?', :method => :delete %></td>
		  </tr>
		<% end %>
		</table>

		<br />

		</p>
		<!-- End Of Content -->
		<p class="nobottomgap">
		</p>
	</div>
<div class="bottom-left"></div><div class="bottom-right"></div>
<div id="listingrowspacer"></div>