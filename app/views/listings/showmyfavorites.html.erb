<h1>My Favorite Properties</h1>
<% if @listings.size == 0 %>
<br>
<h1>You Have Not Saved Any Favorites Yet</h1>
<% end %>
<% @listings.each do |listing| %>
<div class="top-left"></div><div class="top-right"></div>
	<div class="inside">
			<div id="listingresults">
				<div id="leftdiv">
					<% if listing.listingphoto.first %>
						<%= image_tag listing.listingphoto.first.photo.url(:thumb), :width => "100" %>
					<% else %>
						<%= image_tag "/images/nopropertyphotoavailable.png", :height => "90" %><br>
						No Photos Found
					<% end %>
				</div>
				<div id="centerdiv">
					<br>
				   <span class="listingtitle"><%=h listing.title %></span><br>
				   <b>Property ID:</b> <%= listing.id %><br>
				   <%=h truncate_words(listing.description, 18) %><br>
				   <%=h truncate_words(listing.location, 16) %><br>
				   <b>Beds:</b> <%=h listing.beds %> <b>Baths:</b> <%=h listing.baths %>
				   <b>Price:</b> <%=h number_to_currency(listing.price, :precision => 0) %> <b>Taxes:</b> <%=h listing.taxes %> <b>Tax Year:</b> <%=h listing.taxyear %><br>
				   Additional Info: <%=h truncate_words(listing.otherinfo, 18) %>
				</div>
				<div id="rightdiv">
				   <%= link_to 'View', listing %>
				   <%= link_to 'More&nbsp;Info', :controller => 'messages', :action => 'new', :method => 'post', :listingid => listing.id %>
<a href="/messages/new?listingid=<%= listing.id %>" rel="floatbox" title="Contact The Agent" rev="width: 700px; height: 425px; scrolling: no;">More&nbsp;Info</a>
				   <a href="/sharelisting?listingid=<%= listing.id %>">Share</a>
					<a href="/removemyfavorite?listingid=<%= listing.id %>&method=post">Remove</a>
							</div>
					</div>			
				    <p class="notopgap">
					</p>
		<!-- End Of Content -->
		<p class="nobottomgap">
		</p>
	</div>
<div class="bottom-left"></div><div class="bottom-right"></div>
<div id="listingrowspacer"></div>

<% end %>