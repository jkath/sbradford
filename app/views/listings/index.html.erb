<h1>My Featured Listings</h1>

<div id="pagecontent">
	<a href="/addlisting">Add A New Featured Property</a> <br>
<% @listings.each do |listing| %>
<div class="top-left"></div><div class="top-right"></div>
	<div class="inside">
			<div id="listingresults">
				<div id="leftdiv">
					<% if listing.listingphoto.first %>
						<%= image_tag listing.listingphoto.first.photo.url(:thumb), :width => "100" %>
					<% else %>
						<%= image_tag "/images/nopropertyphotoavailable.png", :height => "80" %><br>
						No Photos
					<% end %>
				</div>
				<div id="centerdiv">
					<br>
				   <span class="listingtitle"><%=h listing.title %></span><br>
				   <b>Property ID:</b> <%= listing.id %><br>
				   <%=h truncate_words(listing.description, 18) %><br>
				   <%=h truncate_words(listing.location, 16) %><br>
				   <b>Beds:</b> <%=h listing.beds %> <b>Baths:</b> <%=h listing.baths %>
				   <b>Price:</b> <%=h number_to_currency(listing.price, :precision => 0) %> <b>Taxes:</b> <%=h listing.taxes %> <b>Tax Year:</b> <%=h listing.taxyear %><br>
				   Additional Info: <%=h truncate_words(listing.otherinfo, 18) %>
				</div>
				<div id="rightdiv">
				   <%= link_to 'Photos', :controller => 'listingphotos', :action => 'new', :listingid => listing.id, :method => :post %><br>
				   <%= link_to 'View', listing %><br>
				   <%= link_to 'Edit', edit_listing_path(listing) %><br>
				   <%= link_to 'Delete', listing, :confirm => 'Are you sure?', :method => :delete %>
				</div>
		</div>			
	    <p class="notopgap">
		</p>
		<!-- End Of Content -->
		<p class="nobottomgap">
		</p>
	</div>
<div class="bottom-left"></div><div class="bottom-right"></div>
<div id="listingrowspacer"></div>
<% end %>

<br />
</div>