
<%= error_messages_for :listing %>
<div id="pagecontent">
<div class="top-left"></div><div class="top-right"></div>
	<div class="inside">
			<!-- Start Of Content -->
	<br>
		<% form_for(@listing) do |f| %>
		
		  <%= f.hidden_field :user_id, :value => current_user.id %>
		
		  <p>
		    Property Title<br />
		    <%= f.text_field :title, :size => 69  %>
		  </p>
		  <p>
		    <%= f.label :description %><br />
		    <%= f.text_area :description, :cols => "60", :rows => "5" %>
		  </p>
		  <p>
		    Number Of Bedrooms (ex: 2)<br />
		    <%= f.text_field :beds, :size => 10 %>
		  </p>
		  <p>
		    Number Of Bathrooms (ex: 2.5)<br />
		    <%= f.text_field :baths, :size => 10 %>
		  </p>
		  <p>
		    Location (ex: Miami or Lake Tahoe or 123 Main Street, Denver, CO 80015)<br />
		    <%= f.text_field :location, :size => 69 %>
		  </p>
		  <p>
		    City<br />
		    <%= f.text_field :city, :size => 69 %>
		  </p>
		  <p>
		    State<br />
			<%= collection_select(:listing, :statecode,  @usstates,  :statecode, :statename, {:prompt   => "Select State"}) %>
		  </p>
		  <p>
		    Zip<br />
		    <%= f.text_field :zip, :size => 20 %>
		  </p>
		  <p>
			Price (ONLY NUMERIC DIGITS!!!! ex: 125000 or 57000 or 1000000)<br />
		    <%= f.text_field :price %>
		  </p>
		  <p>
		    <%= f.label :taxes %><br />
		    <%= f.text_field :taxes %>
		  </p>
		  <p>
		    <%= f.label :taxyear %><br />
		    <%= f.text_field :taxyear %>
		  </p>
		  <p>
		    Additional Information<br />
		    <%= f.text_area :otherinfo, :cols => "60", :rows => "5" %>
		  </p>
		  <p>
		    <%= f.submit 'Save Listing' %>
		  </p>
		<% end %>
		<!-- End Of Content -->
		<br>
		<p class="notopgap"> </p>
		<p class="nobottomgap"> </p>
	</div>
<div class="bottom-left"></div><div class="bottom-right"></div>
</div> <!-- End Page Content -->