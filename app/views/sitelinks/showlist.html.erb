<h1>Site Links</h1>
<div id="pagecontent">
<div class="top-left"></div><div class="top-right"></div>
	<div class="inside">
		<p class="notopgap">&nbsp;</p>
		<!-- Start Of Content -->
		<table width="100%">
		<% x = 2 %>
		<% @sitelinks.each do |sitelink| %>
		<% newsclass = "row1bg"
		   newsclass = "row2bg" if x % 2 == 0
		   x += 1
		%>
		 <tr class="<%= newsclass %>">
		    <td class="listtablestd" valign="top"><%= generate_articles_hreftag(sitelink.url, sitelink.title, sitelink.is_popup) %><%=h sitelink.title %></a></td>
			<td valign="top">
				<%if sitelink.photo_file_name %>
				    <%= generate_articles_hreftag(sitelink.url, sitelink.title, sitelink.is_popup) %><%= image_tag sitelink.photo.url(:thumb) %></a>
				<% end %>
			</td>
		  </tr>
		<% end %>
		</table>

		<br />

	<br>
	<!-- End Of Content -->
	<br>
	<p class="nobottomgap"></p>
</div>
<div class="bottom-left"></div><div class="bottom-right"></div>
</div> <!-- End Page Content -->
