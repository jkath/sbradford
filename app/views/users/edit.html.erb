<h1>Edit This Profile</h1>

<%= error_messages_for :user %>
<div id="pagecontent">
<div class="top-left"></div><div class="top-right"></div>
	<div class="inside">
		<p class="notopgap">&nbsp;</p>
			<!-- Start Of Content -->
	<br>
  	<!-- Your content goes here -->
		<% form_for @user do |f| -%>
		
		<% if current_user.is_admin%>
			Give This Person Administration Rights<%= f.check_box :is_admin %>
		<% end %>		
		
		<p><%= label_tag 'login' %><br/>
		<%= f.text_field :login, :size => '10'  %></p>

		<p><%= label_tag 'firstname'%><br/>
		<%= f.text_field :firstname, :size => '50'  %></p>

		<p><%= label_tag 'lastname' %><br/>
		<%= f.text_field :lastname, :size => '50'  %></p>

		<p><%= label_tag 'email' %><br/>
		<%= f.text_field :email, :size => '69'  %></p>

		<p><%= label_tag 'phone' %><br/>
		<%= f.text_field :phone, :size => '20'  %></p>

		<p>Address<br/>
		<%= f.text_field :address2, :size => '50'  %></p>
		
		<p><%= label_tag 'city'  %><br/>
		<%= f.text_field :city, :size => '69'  %></p>
		
		<p>State<br/>
<%= collection_select(:user, :state,  @usstates,  :statecode, :statename, {:prompt   => "Select State"}) %>		
		</p>

		<p><%= label_tag 'zip' %><br/>
		<%= f.text_field :zip, :size => '20' %></p>

		<p><%= label_tag 'password' %><br/>
		<%= f.password_field :password %></p>

		<p><%= label_tag 'password_confirmation', 'Confirm Password' %><br/>
		<%= f.password_field :password_confirmation %></p>

		<p><%= submit_tag 'Save' %></p>
		<% end -%>
		<p class="notopgap"> </p>
		<p class="nobottomgap"> </p>
		
		<br>
		<% if current_user.is_admin%>
			<%= link_to "Back To User List", :controller => 'users', :action => 'index' %>
		<% end %>
		</br>	
	</div>
<div class="bottom-left"></div><div class="bottom-right"></div>
</div> <!-- End Page Content -->